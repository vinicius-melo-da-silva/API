            <div class="form-group">
                <label for="CPF_Cli">CPF_Cli:</label>

                <select name="CPF_Cli" id="CPF_Cli" class="form-select" asp-items="@ViewBag.Clientes">
                    <option value="">-- Selecione um cliente --</option>
                </select>
            </div>
            
            @* <div class="form-group"> *@
            @*     <label asp-for="CPF_Cli" class="control-label"></label> *@
